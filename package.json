{
  "name": "node-template",
  "version": "0.0.1",
  "license": "MIT",
  "main": "src/index.ts",
  "author": "Cristian Gonzalez <degonzalez996@gmail.com>",
  "repository": "https://github.com/yarmolem/node_template.git",
  "scripts": {
    "watch:ts": "swc src -w --out-dir build",
    "watch:js": "nodemon --watch \"build/**/*\" -e js ./build/index.js",
    "dev": "rimraf build && cross-env NODE_ENV=development concurrently \"npm run watch:ts\" \"npm run watch:js\"",
    "build": "swc src -d build",
    "start": "cross-env NODE_ENV=production node build/index.js",
    "lint": "eslint --ext .ts src",
    "lint:fix": "eslint --ext .ts src --fix",
    "gen:jwt-keys": "ts-node generate_jwt_keys.ts"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.59",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^18.11.17",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "chokidar": "^3.5.3",
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "nodemon": "^2.0.22",
    "prisma": "^4.10.1",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "*",
    "yargs": "^17.6.2"
  },
  "dependencies": {
    "@prisma/client": "^4.10.1",
    "apollo-server-express": "3.11.1",
    "argon2": "^0.30.3",
    "class-validator": "0.13.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "graphql": "15.3.0",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.40",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "1.1.1",
    "winston": "^3.8.2",
    "zod": "^3.21.4"
  },
  "_moduleAliases": {
    "@src": "./build"
  }
}
