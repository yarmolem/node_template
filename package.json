{
  "name": "node-template",
  "version": "0.0.1",
  "license": "MIT",
  "main": "src/index.ts",
  "author": "Cristian Gonzalez <degonzalez996@gmail.com>",
  "repository": "https://github.com/yarmolem/node_template.git",
  "scripts": {
    "watch:ts": "swc ./src -w --out-dir ./build",
    "watch:js": "nodemon --watch \"build/**/*\" -e js ./build/index.js",
    "dev": "concurrently \"npm run watch:ts\" \"npm run watch:js\"",
    "build": "swc ./src -d build",
    "start": "node ./build/index.js",
    "lint": "eslint --ext .ts src",
    "lint:fix": "eslint --ext .ts src --fix",
    "gen:jwt-keys": "node ./scripts/generate_jwt_keys.mjs",
    "db:push": "node ./scripts/db_migration.mjs",
    "db:migration": "drizzle-kit generate:pg"
  },
  "devDependencies": {
    "@swc/cli": "0.1.62",
    "@swc/core": "1.3.59",
    "@types/cors": "2.8.13",
    "@types/express": "4.17.15",
    "@types/jsonwebtoken": "8.5.9",
    "@types/module-alias": "2.0.1",
    "@types/node": "18.11.17",
    "@types/pg": "^8.10.7",
    "@typescript-eslint/eslint-plugin": "5.43.0",
    "chokidar": "3.5.3",
    "concurrently": "8.0.1",
    "drizzle-kit": "^0.19.13",
    "eslint": "8.0.1",
    "eslint-config-standard-with-typescript": "34.0.1",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-n": "15.0.0",
    "eslint-plugin-promise": "6.0.0",
    "nodemon": "2.0.22",
    "rimraf": "5.0.1",
    "ts-node": "10.9.1",
    "typescript": "5.0.4",
    "yargs": "17.6.2"
  },
  "dependencies": {
    "argon2": "0.30.3",
    "cors": "2.8.5",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.10",
    "dotenv": "16.0.3",
    "drizzle-orm": "^0.28.6",
    "drizzle-zod": "^0.5.1",
    "express": "4.18.2",
    "jsonwebtoken": "8.5.1",
    "module-alias": "2.2.2",
    "pg": "^8.11.3",
    "winston": "3.8.2",
    "zod": "3.21.4"
  },
  "_moduleAliases": {
    "@src": "./build"
  }
}
